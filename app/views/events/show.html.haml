- title @event.title

.row
  .hero
    .hero-image
      - if @event.photo.attached?
        = image_tag url_for(@event.landing_page_photo)
      - else
        = image_tag 'default_event_image.jpg'
    .col
      .hero-title
        %h1.title
          = @event.title
          - if @event.owned_by?(current_user)
            %small
              = link_to 'Edit', edit_event_path(@event), class: 'text-muted'
        %em.text-muted.mb-2
          Hosted by
          %strong
            - if @event.owned_by?(current_user)
              you
            - else
              = @event.owner.name
.row
  .col-md-6
    .row
      .col-md-auto
        %em
          - # show a simplified format for events spanning a single day
          - if @event.start_datetime.to_date == @event.end_datetime.to_date
            .font-weight-bold= @event.start_date
            = "#{@event.start_time} - #{@event.end_time}"
          - else
            %strong= @event.start_date
            = @event.start_time
            %p
              = "...until"
              %strong= @event.end_date
              = @event.end_time
      - if @event.address
        .col-md
          .d-md-none.mt-2= render 'addresses/show', address: @event.address
          .d-none.d-md-inline.text-right= render 'addresses/show', address: @event.address

    .d-md-none= render 'attendances/event_form', attendance: @attendance, event: @event, attendee: @attendee
    %hr.d-none.d-md-block
    .content= @event.description
  .col-md-6
    .d-none.d-md-block= render 'attendances/event_form', attendance: @attendance, event: @event, attendee: @attendee
    - if @event.attended_by?(@attendee)
      .m-2= link_to 'ğŸ“… Add to Google Calendar', gcal_url(@event)
      .m-2= link_to 'ğŸ“… Download as a calendar event', ical_event_path(@event)
    = render 'events/rsvps', event: @event
    - if @event.polls.any?
      %hr
      - @event.polls.each do |poll|
        = render 'polls/poll', poll: poll, respondent: @attendee
    - if @event.owned_by?(current_user)
      = link_to "Add Poll", new_event_poll_path(@event), class: 'btn btn-primary btn-sm my-2'
%hr

= commontator_thread(@event)
