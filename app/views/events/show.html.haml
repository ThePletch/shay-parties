- title @event.title

- if @event.photo.attached?
  .row
    .hero
      .hero-image
        = image_tag url_for(@event.landing_page_photo)
      .col
        .hero-title
          %h1.title
            = @event.title
            - if @event.owned_by?(current_user)
              %small
                = link_to 'Edit', edit_event_path(@event), class: 'text-muted'
- else
  %h1.title
    = @event.title
    - if @event.owned_by?(current_user)
      %small
        = link_to 'Edit', edit_event_path(@event), class: 'text-muted'
.row
  .col-md-6
    %em
      = @event.start_time
      \-
      = @event.end_time
    - if @event.address
      = render 'addresses/show', address: @event.address
    %div
      = link_to 'ğŸ“… Add to Google Calendar', gcal_url(@event)
    %div
      = link_to 'ğŸ“… Download as a calendar event', ical_event_path(@event)

    .content= @event.description
  .col-md-6
    = render 'attendances/event_form', attendance: @attendance, event: @event, attendee: @attendee
    = render 'events/rsvps', event: @event
    - if @event.polls.any?
      %hr
      - @event.polls.each do |poll|
        = render 'polls/poll', poll: poll, respondent: @attendee
    - if @event.owned_by?(current_user)
      = link_to "Add Poll", new_event_poll_path(@event), class: 'btn btn-primary btn-sm my-2'
%hr
= commontator_thread(@event)
