%h1 Events
%table
  %thead
    %tr
      %th Title
      %th Date
      %th Person
      %th{:colspan => "3"}
  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.start_time.to_date
        %td= event.owner.email
        %td= link_to 'Show', event
        - if event.owned_by?(current_user)
          %td= link_to 'Edit', edit_event_path(event)
          %td= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Event', new_event_path
