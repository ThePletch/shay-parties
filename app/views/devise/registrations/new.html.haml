%h2.title Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email, class: 'label'
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input'
  .field
    = f.label :password, class: 'label'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    = f.password_field :password, autocomplete: "off", class: 'input'
  .field
    = f.label :password_confirmation, class: 'label'
    = f.password_field :password_confirmation, autocomplete: "off", class: 'input'
  .field.is-grouped
    .control
      = f.submit "Sign up", class: 'button is-link'
    .control
      = link_to "...or log in", new_session_path(resource_name), class: 'button is-white'
