%h2.title= t('devise.registrations.new')
= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.email_field :email, autofocus: true, autocomplete: "email", floating: true
  = f.text_field :name, autocomplete: "name", floating: true
  = f.password_field :password, autocomplete: "off", floating: true, help: (@minimum_password_length ? "(#{t('devise.registrations.minimum_password_length', length: @minimum_password_length)})" : "")
  = f.password_field :password_confirmation, autocomplete: "off", floating: true
  .form-group
    = f.submit t('devise.registrations.new'), class: 'btn btn-primary'
    = link_to t('devise.registrations.new_to_login'), new_session_path(resource_name), class: 'btn btn-link text-decoration-none'
