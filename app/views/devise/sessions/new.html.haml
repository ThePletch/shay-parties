= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %h1= t('user.log_in')
  = f.email_field :email, autofocus: true, autocomplete: "email", floating: true
  = f.password_field :password, autocomplete: "off", floating: true
  - if devise_mapping.rememberable?
    = f.form_group do
      = f.check_box :remember_me, switch: true
  .form-group
    = f.submit t('user.form.log_in'), class: 'btn btn-primary d-inline-block mx-1'
    = link_to t('user.form.or_sign_up'), new_registration_path(resource_name), class: 'mx-1 text-decoration-none'
    = link_to t('user.form.forgot_password_prompt'), new_password_path(resource_name), class: 'btn btn-secondary float-end'
